<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#5c505c</item>
        <item name="android:buttonTint">#5c505c</item>
        <item name="android:buttonBarStyle">@style/buttons</item>
        <item name="colorPrimaryDark">#5c505c</item>
        <item name="colorAccent">#5c505c</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomOverflowTheme</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:id">@id/main_toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="CustomOverflowTheme">
        <item name="android:src">@drawable/overflow_menu</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="buttons">
        <item name="android:textColor">#5c505c</item>
    </style>

    <style name="CustomizedDialogStyle">
        <item name="android:background">@color/background_dark</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/pDialog_button</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/nDialog_button</item>
    </style>

    <style name="pDialog_button">
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:minWidth">135dp</item>
    </style>

    <style name="nDialog_button">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:minWidth">135dp</item>
    </style>

</resources>
