<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.ubclaunchpad.driver.login.LoginActivity">


    <Button
        android:id="@+id/signInButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="0dp"
        android:fontFamily="serif-monospace"
        android:onClick="signInClick"
        android:text="@string/signIn_bEnter"
        android:textColor="@color/text_white" />


    <TextView
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signInButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:fontFamily="serif-monospace"
        android:text="@string/signIn_bRegister"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_white" />


    <ImageView
        android:id="@+id/imgCar"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/signInButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/signInButton"
        android:layout_marginTop="85dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00ffffff"
        android:contentDescription="@null"
        android:cropToPadding="false"
        android:src="@drawable/launchpadicon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgCar"
        android:layout_marginTop="37dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:weightSum="1">


        <EditText
            android:id="@+id/emailSignInEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.20"
            android:background="@null"
            android:fontFamily="serif-monospace"
            android:hint="@string/signIn_email"
            android:inputType="textEmailAddress"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_white" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/text_white" />


        <EditText
            android:id="@+id/signInPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_weight="0.20"
            android:background="@null"
            android:fontFamily="serif-monospace"
            android:hint="@string/signIn_password"
            android:inputType="textPassword"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_white" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/text_white" />


    </LinearLayout>

</RelativeLayout>


